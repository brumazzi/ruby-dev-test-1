<%- provide(:path, @node.path) %>

<div class="flex wrap row">
  <% @node.nodes.each do |node| %>
    <div class="column px-1 my-1" id="node-<%= node.id %>" style="">
      <% if node.file? %>
        <button class="select card b-0 position relative" style="border-radius: 1rem" ondblclick="window.location = '<%= url_for node.content %>' ">
      <% else %>
        <button class="select card b-0 position relative" style="border-radius: 1rem" ondblclick="window.location = '/?node_id=<%= node.id %>' ">
      <% end %>
        <%= link_to node_path(node.id, node_id: node.id), remote: true, method: :delete, class: %w[position absolute trash button danger], style: "top: -8px; right: -8px; padding: 0.5rem;" do %>
          <svg class="" xmlns="http://www.w3.org/2000/svg" width="1rem" viewBox="0 0 448 512">
            <path fill="#f8f9fa" d="M32 464a48 48 0 0 0 48 48h288a48 48 0 0 0 48-48V128H32zm272-256a16 16 0 0 1 32 0v224a16 16 0 0 1-32 0zm-96 0a16 16 0 0 1 32 0v224a16 16 0 0 1-32 0zm-96 0a16 16 0 0 1 32 0v224a16 16 0 0 1-32 0zM432 32H312l-9.4-18.7A24 24 0 0 0 281.1 0H166.8a23.72 23.72 0 0 0-21.4 13.3L136 32H16A16 16 0 0 0 0 48v32a16 16 0 0 0 16 16h416a16 16 0 0 0 16-16V48a16 16 0 0 0-16-16z"/>
          </svg>
        <% end %>
        <div class="header mb-0">
          <% if node.directory? %>
            <%= render 'folder' %>
          <% else %>
            <%= render 'file' %>
          <% end %>
        </div>
        <div class="body text-center"><strong class="text-dark"><%= node.name %></strong></div>
      </button>
    </div>
  <% end %>
</div>